{
    "configurations": [
        {
            "name": "Install",
            "command": "npm install",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Start",
            "command": "npm run start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Build",
            "command": "sam build",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Start (Sam Build)",
            "command": "sam local start-api --env-vars \"env/sam.env.json\"",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Deploy (AWS SAM)",
            "command": "sam deploy",
            "request": "launch",
            "type": "node-terminal"
            
        },

